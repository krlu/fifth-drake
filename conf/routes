# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET   /public/*file               controllers.Assets.versioned(path="/public", file)

GET   /health                     gg.climb.fifthdrake.controllers.Health.check

GET   /game/:gameKey              gg.climb.fifthdrake.controllers.GameDataController.loadDashboard(gameKey: String)
GET   /game/:gameKey/data         gg.climb.fifthdrake.controllers.GameDataController.getGameData(gameKey: String)
GET   /game/:gameKey/tags         gg.climb.fifthdrake.controllers.GameDataController.getTags(gameKey: String)
